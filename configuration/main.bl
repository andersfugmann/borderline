import "./generic"
import "./zones"

zone self {
     interface = lo;
     process filter { rule { source zone = self } policy allow } policy deny
}

process filter {
        rule {
             rule { state = invalid; } policy deny;
             rule { state = related, established; } policy allow;
             protocol = tcp, udp, icmp, ipv6-icmp;
             { state = new };
             call zones;
        } policy deny
} policy deny

