zone self {
     interface = lo;
     network = fe80::/64;
     network = ff00::/8;
     network = ::1;

     process filter {
         rule { src zone = int; } policy allow;
         rule {
             rule { destination tcp port = smtp, ssmtp, domain, imaps, www, https, ntp } policy allow;
             rule { destination udp port = domain, ntp } policy allow;
         } policy deny;
     } policy deny;
}
