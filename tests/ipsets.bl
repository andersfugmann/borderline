import "../configuration/generic/iana-ipv6-special-registry.bl"
import "../configuration/generic/iana-ipv4-special-registry.bl"

process filter {
  rule {
    source address = [ ipv6_iana_all ];
    source interface = "ipv6_iana_all";
  } policy { log "OK: ipv6_iana_all"; deny };

  rule {
    source address = [ ipv6_iana_source ];
    source interface = "ipv6_iana_source";
  } policy { log "OK: ipv6_iana_source"; deny };

  rule {
    source address = [ ipv6_iana_all ];
    source address != [ ipv6_iana_source ];
    source interface = "ipv6_iana_all \ ipv6_iana_source";
  } policy { log "OK: ipv6_iana_all \ ipv6_iana_source"; deny };

  rule {
    source address != [ ipv6_iana_all ];
    source address = [ ipv6_iana_source ];
    source interface = "ipv6_iana_source \ ipv6_iana_all";
  } policy { log "ERROR: ipv6_iana_source \ ipv6_iana_all"; deny };

} policy { allow; }
