import "./test"

define tcp = 4
define udp = 17
define icmp = 1
define icmpv6 = 58

zone self {
     interface = lo;
     process filter { rule { source zone = self } policy allow } policy deny
}

process filter {
        rule {
             rule { state = related, established; } policy allow;
             protocol = tcp, udp, icmp, icmpv6;
             state = new;
             call zones;
        } policy deny
} policy deny

